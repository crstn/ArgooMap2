package com.mapitz.gwt.googleMaps.client;

import com.google.gwt.user.client.Element;
import com.google.gwt.user.client.ui.Widget;

public class GDraggableObjectOptions extends GOptionBase {

    Widget widget;

    protected GDraggableObjectOptions(JSObject e) {
        super(e);
    }

    public static GDraggableObjectOptions narrowToGDraggableObjectOptions(
            JSObject e) {
        return (e == null) ? null : new GDraggableObjectOptions(e);
    }

    public GDraggableObjectOptions() {
        super();
    }

    /**
     * left Number The left starting position of the object. (Since 2.59)
     * 
     * @param left
     */
    public void setLeft(int left) {
        setAttribute("left", left);
    }

    /**
     * left Number The left starting position of the object. (Since 2.59)
     * 
     * @param left
     */
    public int getLeft() {
        return getAttributeAsInt("left");
    }

    /**
     * top Number The top starting position of the object. (Since 2.59)
     * 
     * @param top
     */
    public void setTop(int top) {
        setAttribute("top", top);
    }

    /**
     * top Number The top starting position of the object. (Since 2.59)
     * 
     * @return
     */
    public int getTop() {
        return getAttributeAsInt("top");
    }

    /**
     * container Node A DOM element that will act as a bounding box for the
     * draggable object (Since 2.59)
     * 
     * @param container
     */
    public void setContainer(Element container) {
        setAttribute("container", container);
    }

    /**
     * container Node A DOM element that will act as a bounding box for the
     * draggable object (Since 2.59)
     * 
     * @return
     */
    public Element getContainer() {
        return getAttributeAsElement("container");
    }

    /**
     * draggableCursor String The cursor to show on mousover. (Since 2.59)
     * 
     * @param draggableCursor
     */
    public void setDraggableCursor(String draggableCursor) {
        setAttribute("draggableCursor", draggableCursor);
    }

    /**
     * draggableCursor String The cursor to show on mousover. (Since 2.59)
     * 
     * @return
     */
    public String getDraggableCursor() {
        return getAttribute("draggableCursor");
    }

    /**
     * draggingCursor String The cursor to show while dragging. (Since 2.59)
     * 
     * @param draggingCursor
     */
    public void setDraggingCursor(String draggingCursor) {
        setAttribute("draggingCursor", draggingCursor);
    }

    /**
     * draggingCursor String The cursor to show while dragging. (Since 2.59)
     * 
     * @return
     */
    public String getDraggingCursor() {
        return getAttribute("draggingCursor");
    }

}
